// views/layouts/default.pug
doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title #{pageTitle}

        // Bootstrap CSS CDN - Đảm bảo rằng nó được tải đầu tiên để CSS tùy chỉnh có thể override nếu cần
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css", integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N", crossorigin="anonymous")
        
        // Custom CSS của bạn - Đặt sau Bootstrap để tùy chỉnh có thể override các quy tắc của Bootstrap
        link(rel="stylesheet", href="/admin/css/style.css")

    body
        // Header
        include ../partials/header.pug

        // Body chính (chứa Sider và Main content)
        .body 
            // Sider
            include ../partials/sider.pug

            // Main Content (nơi block main của các trang con sẽ được chèn vào)
            .main
                block main

        // Các Script của Bootstrap (jQuery và Bootstrap Bundle JS) - Đặt cuối body để trang tải nhanh hơn
        // jQuery (nếu dùng Bootstrap 4, cần JQuery)
        script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js", integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj", crossorigin="anonymous")
        // Popper.js và Bootstrap JS (Bootstrap Bundle đã bao gồm Popper)
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5P5t5O5p", crossorigin="anonymous")

        // TinyMCE
        script(src="/tinymce/tinymce.min.js") // Đường dẫn đến thư viện TinyMCE
        script(src="/admin/js/tinymce-config.js") // File cấu hình TinyMCE của bạn

        // Custom JavaScript của bạn (script.js) - Đặt cuối cùng để đảm bảo DOM đã sẵn sàng
        script(src="/admin/js/script.js") 

        // Block này dành riêng cho các script mà các trang con (như product/index.pug) muốn thêm vào
        block scripts